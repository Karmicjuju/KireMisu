{
  "servers": {
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./",
        "--allowed-directories",
        "./frontend",
        "./backend",
        "./docs",
        "./.claude/docs",
        "--excluded-patterns",
        ".git/**",
        ".env*",
        "node_modules/**",
        "dist/**",
        "build/**",
        ".venv/**"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-playwright"
      ]
    }
  }
}