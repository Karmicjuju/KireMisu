# KireMisu Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# SECURITY: Required - Generate a strong secret key for JWT tokens
# Use: openssl rand -hex 32
SECRET_KEY=your-secure-secret-key-here

# DATABASE CONFIGURATION
# Either set DATABASE_URL directly or use individual components
DATABASE_URL=postgresql://username:password@localhost:5432/kiremisu

# OR use individual database components (if DATABASE_URL not set)
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=kiremisu

# STORAGE PATHS
MANGA_LIBRARY_PATH=/manga
THUMBNAILS_PATH=/thumbnails
PROCESSED_DATA_PATH=/processed

# APPLICATION SETTINGS
LOG_LEVEL=INFO