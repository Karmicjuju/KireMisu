# GitHub MCP Server Configuration
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_pat_here

# Playwright MCP Server Configuration
# No additional environment variables required - uses system Playwright installation

# KireMisu Application Configuration
# Database Configuration
DATABASE_URL=postgresql+asyncpg://kiremisu:kiremisu@localhost:5432/kiremisu

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Storage Configuration
MANGA_STORAGE_PATHS=["/path/to/manga/library"]

# External APIs
MANGADX_API_URL=https://api.mangadx.org
MANGADX_RATE_LIMIT_PER_MINUTE=60

# File Processing
MAX_FILE_SIZE_MB=500
THUMBNAIL_SIZE=(300,400)

# Background Jobs
JOB_POLL_INTERVAL_SECONDS=5
MAX_CONCURRENT_JOBS=2